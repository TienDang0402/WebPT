@model List<Model.EF.OrderDetail>

@{
    ViewBag.Title = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}
@{
    var order = (Model.EF.Order)ViewBag.OrDetail;
}
@section header{
    Chi tiết hóa đơn số: @order.OrderID - Khách hàng: @order.ShipName
}


<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>

                <th>Mã hóa đơn</th>
                <th>Mã sản phẩm</th>
                <th>Số lượng</th>
                <th>Giá</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>@item.OrderID</td>
                    <td>@item.ID</td>
                    <td>@item.Quantity</td>
                    <td>@item.Price</td>
                </tr>
            }
        </tbody>
    </table>
</div>